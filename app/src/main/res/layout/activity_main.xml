<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#FFFF983D">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLANK SPACE"
        android:id="@+id/textView"
        android:layout_marginTop="28dp"
        android:textIsSelectable="false"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Name"
        android:id="@+id/textView2"
        android:layout_marginTop="36dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:background="#fffeff8e"
        android:textSize="33dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/etName"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:id="@+id/textView3"
                android:textSize="30dp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rbtLevel">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:id="@+id/btEasy"
                    android:layout_above="@+id/textView3"
                    android:layout_alignEnd="@+id/textView2"
                    android:textSize="25dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:id="@+id/btMedium"
                    android:layout_below="@+id/btEasy"
                    android:layout_alignStart="@+id/btEasy"
                    android:layout_column="3"
                    android:textSize="25dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:id="@+id/btHard"
                    android:layout_below="@+id/btMedium"
                    android:layout_alignStart="@+id/btMedium"
                    android:textSize="25dp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btPlay"
        android:background="#ff373737"
        android:textColor="#ffffffff"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="ButtonClicked" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="ScoreBoard"
        android:id="@+id/btScoreboard"
        android:background="#ff373737"
        android:textColor="#ffffffff"
        android:layout_below="@+id/btPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="ButtonClicked" />

</RelativeLayout>
